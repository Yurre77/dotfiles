{
    "layer": "top",
    "position": "top",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "ipc": false,
    "reload_style_on_change": true,
    "height": 35,
    "spacing": 4,
    "modules-left": [
	"custom/power",
	"clock",
	"custom/media"
    ],
    "modules-center": [
        "ext/workspaces",
    ],
    "modules-right": [
        "pulseaudio",
        "network",
        "backlight",
	"battery",
        "custom/notification",
    ],
    "ext/workspaces": {
      "format": "{icon}",
      "sort-by-id": true,
      "on-click": "activate",
      "format-icons": {
		"active": "ÔÜí",
		"default": "ÔÑå",
		"urgent": "ÔÅ™"
	}
    },
    "dwl/window": {
        "format": "{}"
    },
    "custom/notification": {
    	"tooltip": false,
    	"format": "{icon}",
    	"format-icons": {
      		"notification": "Û∞Çö",
      		"none": "ÔÇ¢",
      		"dnd-notification": "Û∞∫Å",
      		"dnd-none": "ÔÇ¢"
	    },
    	"return-type": "json",
    	"exec-if": "which swaync-client",
    	"exec": "swaync-client -swb",
    	"on-click": "swaync-client -t -sw",
    	"on-click-right": "swaync-client -d -sw",
	"escape": true
    },
    "custom/updates": {
        "format": "Û∞ö∞ {}",
        "interval": 300,                     // every 5 min
        "exec": "i=$(checkupdates); echo \"$i\" |wc -l; echo \"$i\" |column -t |tr '\n' '\r'",       // # of updates and tooltip details
        "exec-if": "exit 0",                  // always run; consider advanced run conditions
        "on-click": "kitty -e yay -Syu", // update system
        "signal": 8
    },
    "keyboard-state": {
        "numlock": false,
        "scrolllock": false,
        "capslock": true,
        "format": "{icon}",
        "format-icons": {
            "locked": "Capslock",
            "unlocked": ""
        }
    },
    "cpu": {
      "interval": 2,
      "format": "Ôãõ {load}%"
    },
    "temperature": {
      "thermal-zone": 2,
      "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
      "critical-threshold": 10,
      "format-critical": "Ôãã {temperatureC}¬∞C",
      "format": ""
    },
    "wlr/taskbar": {
      "format": "{icon}",
      "icon-size": 22,
      "all-outputs": false,
      "tooltip-format": "{title}",
      "markup": true,
      "on-click": "activate",
      "on-click-right": "close",
      "ignore-list": ["Rofi", "wofi"]
    },
    "backlight": {
      "interval": 2,
      "device": "amdgpu_bl0",
      "format": "{percent}% {icon}",
      "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"],
      "on-scroll-up": "brightnessctl set +1%",
      "on-scroll-down": "brightnessctl set 1%-",
      "smooth-scrolling-threshold": 1
    },
    "idle_inhibitor": {
        "tooltip": false,
        "format": "{icon}",
        "start-activated": false,
        "format-icons": {
            "activated": "ÔÅÆ ",
            "deactivated": "ÔÅ∞ "
        }
    },
    "tray": {
      "interval": 1,
      "icon-size": 21,
      "spacing": 10
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{signalStrength}% Ôá´",
        "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
        "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
	"on-click": "kitty -e nmtui"
    },
    "bluetooth": {
	// "controller": "controller1", // specify the alias of the controller if there are more than 1 on the system
	"format": "Ôäî {status}",
	"format-disabled": "", // an empty format will hide the module
	"format-connected": "Ôäî {num_connections}",
	"tooltip-format": "{controller_alias}\t{controller_address}",
	"tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
	"tooltip-format-enumerate-connected": "{device_alias}\t{device_address}"
    },
    "clock": {
      "format": "{:%H:%M} ÔÄó",
      "format-alt": "{:%A, %d. %b  %H:%M} Ó™∞",
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
      "calendar": {
        "mode": "year",
        "mode-mon-col": 3,
        "weeks-pos": "right",
        "on-scroll": 1,
        "format": {
          "months": "<span color='#ffead3'><b>{}</b></span>",
          "days": "<span color='#ecc6d9'><b>{}</b></span>",
          "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
          "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
          "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
        }
      }
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö©  {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "custom/power": {
        "format": "Ôå¢",
        "tooltip": false,
        "on-click": "wlogout -b 6 --protocol layer-shell",
    },
    "battery": {
        "states": {
                   "warning": 30,
                   "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
        "max-length": 25
    },
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "python $HOME/.config/mango/waybar/custom/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    }
}
